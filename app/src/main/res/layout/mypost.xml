<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">


        <EditText
            android:id="@+id/text_Info_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="等待..."

            android:background="@android:color/transparent"
            android:maxLines="1"
            android:textSize="25sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:background="@color/cardview_dark_background"
            android:layout_height="1px"></RelativeLayout>


        <ImageView
            android:id="@+id/img_Info_p"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:text="載入中.."/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:background="@color/cardview_dark_background"
            android:layout_height="1px"></RelativeLayout>

        <EditText
            android:id="@+id/text_Info_p_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:text="等待..."
            android:textStyle="bold"
            android:maxLines="5"
            android:background="@android:color/transparent"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <TextView
                android:id="@+id/p_content_Del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="刪除"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/p_content_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="修改"
                android:onClick="upDate_p"
                android:textSize="15sp" />
        </LinearLayout>







    </LinearLayout>

</android.support.v7.widget.CardView>